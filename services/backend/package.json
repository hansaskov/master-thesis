{
  "name": "backend",
  "main": "./src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir ./dist",
    "compile": "bun build src/index.ts --compile --minify --sourcemap --target bun --outfile backend",
    "check": "tsc",
    "start": "NODE_ENV=production bun dist/index.js",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push --verbose --strict",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:check": "bunx drizzle-kit check",
    "db:studio": "bunx drizzle-kit studio",
    "lint": "bunx @biomejs/biome check src",
    "lint:fix": "bun lint --write"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.4",
    "elysia": "^1.1.26",
    "@elysiajs/eden": "^1.1.3",
    "@elysiajs/swagger": "^1.1.6",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@sinclair/typebox": "0.32.34",
    "arctic": "^2.3.1",
    "drizzle-orm": "^0.37.0",
    "drizzle-typebox": "^0.1.1",
    "nanoid": "^5.0.9",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.29.1",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "@sinclair/typebox": "0.32.34"
  }
}